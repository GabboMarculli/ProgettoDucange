<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="548.0" prefWidth="714.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.progettoducange.Controller.AddIngredientToFridgeController">
    <children>
        <Pane prefHeight="200.0" style="-fx-background-color: #00bfff;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="350.0" layoutY="70.0" text="Insert new recipe" textFill="WHITE">
                    <font>
                        <Font size="50.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <GridPane fx:id="my_grid_pane" alignment="CENTER" layoutX="165.0" layoutY="228.0" prefHeight="320.0" prefWidth="650.0" AnchorPane.leftAnchor="165.0" AnchorPane.rightAnchor="165.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label prefHeight="18.0" prefWidth="90.0" text="Name">
                </Label>
                <TextField fx:id="Name" GridPane.columnIndex="2">
                </TextField>

                <Label prefHeight="18.0" prefWidth="90.0" text="Measure"  GridPane.rowIndex="2">
                </Label>
                <TextField fx:id="Measure"  GridPane.rowIndex="2" GridPane.columnIndex="2">
                </TextField>

                <Label prefHeight="18.0" prefWidth="90.0" text="Grams"  GridPane.rowIndex="3">
                </Label>
                <TextField fx:id="Grams"  GridPane.rowIndex="3" GridPane.columnIndex="2">
                </TextField>

                <Label prefHeight="18.0" prefWidth="90.0" text="Calories"  GridPane.rowIndex="4">
                </Label>
                <TextField fx:id="Calories"  GridPane.rowIndex="4" GridPane.columnIndex="2">
                </TextField>

                <Label text="Protein" GridPane.rowIndex="5">
                </Label>
                <TextField fx:id="Protein"  GridPane.rowIndex="5" GridPane.columnIndex="2">
                </TextField>

                <Label text="Fat" GridPane.rowIndex="6">
                </Label>
                <TextField fx:id="Fat"  GridPane.rowIndex="6" GridPane.columnIndex="2">
                </TextField>

                <Label text="Fiber" GridPane.rowIndex="7">
                </Label>
                <TextField fx:id="Fiber"  GridPane.rowIndex="7" GridPane.columnIndex="2">
                </TextField>

                <Label text="Carbs" GridPane.rowIndex="8">
                </Label>
                <TextField fx:id="Carbs"  GridPane.rowIndex="8" GridPane.columnIndex="2">
                </TextField>

                <Label text="Category" GridPane.rowIndex="9">
                </Label>
                <TextField fx:id="Category"  GridPane.rowIndex="9" GridPane.columnIndex="2">
                </TextField>

                <Button alignment="CENTER" contentDisplay="CENTER" GridPane.rowIndex="10" mnemonicParsing="false"
                        text="Back " prefWidth="300.0" onAction="#goToAllIngredient">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
                <Button fx:id="add" alignment="CENTER" contentDisplay="CENTER" GridPane.rowIndex="10" GridPane.columnIndex="2"
                        mnemonicParsing="false" text="Add Ingredient " prefWidth="300.0">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
                <Label fx:id="invalidAdd" alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0"
                       prefWidth="300.0" textAlignment="CENTER" GridPane.rowIndex="11" GridPane.columnIndex="2"
                       textFill="RED">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
            </children>
        </GridPane>
    </children>
</AnchorPane>
