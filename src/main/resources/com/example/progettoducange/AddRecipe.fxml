<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="548.0" prefWidth="714.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progettoducange.Controller.AddRecipeController">
        <children>
            <Pane prefHeight="200.0" style="-fx-background-color: #00bfff;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <children>
                    <Label layoutX="350.0" layoutY="70.0" text="Insert new recipe" textFill="WHITE">
                        <font>
                            <Font size="50.0" />
                        </font>
                    </Label>
                </children>
            </Pane>
            <GridPane alignment="CENTER" layoutX="165.0" layoutY="228.0" prefHeight="320.0" prefWidth="650.0" AnchorPane.leftAnchor="165.0" AnchorPane.rightAnchor="165.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label prefHeight="18.0" prefWidth="30.0" text="Title">
                    </Label>
                    <TextField fx:id="RecipeTitle" GridPane.columnIndex="2">
                    </TextField>

                    <Label prefHeight="18.0" prefWidth="90.0" text="Preparation time"  GridPane.rowIndex="2">
                    </Label>
                    <TextField fx:id="PreparationTime"  GridPane.rowIndex="2" GridPane.columnIndex="2">
                    </TextField>

                    <Label prefHeight="18.0" prefWidth="90.0" text="Cook time"  GridPane.rowIndex="3">
                    </Label>
                    <TextField fx:id="CookTime"  GridPane.rowIndex="3" GridPane.columnIndex="2">
                    </TextField>

                    <Label prefHeight="18.0" prefWidth="90.0" text="Total time"  GridPane.rowIndex="4">
                    </Label>
                    <TextField fx:id="TotalTime"  GridPane.rowIndex="4" GridPane.columnIndex="2">
                    </TextField>

                    <Label text="Ingredients" GridPane.rowIndex="5">
                    </Label>
                    <VBox prefHeight="200.0" prefWidth="500.0" GridPane.columnIndex="2" GridPane.rowIndex="5">
                        <TextArea fx:id="Ingredients" prefHeight="100.0" prefWidth="300.0"
                                  promptText="Write the ingredients..." wrapText="true">
                        </TextArea>
                    </VBox>

                    <Label text="Directions" GridPane.rowIndex="7">
                    </Label>
                    <VBox prefHeight="200.0" prefWidth="500.0" GridPane.columnIndex="2" GridPane.rowIndex="7">
                        <TextArea fx:id="Directions" prefHeight="100.0" prefWidth="300.0"
                                  promptText="Write the directions..." wrapText="true">
                        </TextArea>
                    </VBox>

                    <Button alignment="CENTER" contentDisplay="CENTER" GridPane.rowIndex="9" mnemonicParsing="false"
                            text="Back " onAction="#goToAllRecipe" prefWidth="300.0">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Button>
                    <Button alignment="CENTER" contentDisplay="CENTER" GridPane.rowIndex="9" GridPane.columnIndex="2"
                            mnemonicParsing="false" text="Add recipe " onAction="#addRecipe" prefWidth="300.0">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Button>
                    <Label fx:id="invalidRecipe" alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0"
                           prefWidth="300.0" textAlignment="CENTER" GridPane.rowIndex="10" GridPane.columnIndex="2"
                           textFill="RED">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                    </Label>
                </children>
            </GridPane>
        </children>
</AnchorPane>
