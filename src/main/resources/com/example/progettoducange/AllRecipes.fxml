<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progettoducange.Controller.AllRecipesController">
    <!-- Beginning of the left part of the Borderpane -->
    <top>
        <ToolBar prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #00bfff;" BorderPane.alignment="CENTER">
            <items>
                <Button lineSpacing="10.0" mnemonicParsing="false" prefHeight="0.0" prefWidth="146.0" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/logo.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="450.0" layoutY="20.0" prefHeight="45.0" prefWidth="250.0" text="All the recipes">
                    <font>
                        <Font size="25.0" />
                    </font>
                </Label>
                <Pane prefHeight="6.0" prefWidth="533.0" />
            </items>
        </ToolBar>
    </top>
    <left>
        <!-- An AnchorPane in the Left BorderPane -->
        <AnchorPane fx:id="bottom" prefHeight="700.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="AllRecipesTable" layoutX="35.0" layoutY="76.0" prefHeight="477.0" prefWidth="439.0">
                    <columns>
                        <TableColumn fx:id="RecipeNameColumn" prefWidth="203.0" text="Name" />
                        <TableColumn fx:id="ReviewCount" prefWidth="141.0" text="Number of Reviews" />
                        <TableColumn fx:id="TotalTime" prefWidth="94.0" text="Total time" />
                    </columns>
                </TableView>
                <Button alignment="CENTER" contentDisplay="CENTER" layoutX="60.0" layoutY="555.0" mnemonicParsing="false" onAction="#goToHome" text="Back ">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>

                <Button fx:id="ShowMoreRecipe" layoutX="389.0" layoutY="553.0" mnemonicParsing="false" onAction="#FillTable" text="Show more" />
            <TextField fx:id="SearchRecipe" layoutX="170.0" layoutY="34.0" promptText="Seach for a recipe" />
            <Button fx:id="SearchRecipeButton" layoutX="343.0" layoutY="35.0" mnemonicParsing="false" onAction="#Search_for_recipe" text="Button" />
            </children>
        </AnchorPane>
    </left>
    <!-- Ending of the left part of the Borderpane -->

    <!-- Beginning of the right part of the Borderpane -->
    <right>
        <AnchorPane prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane fx:id="Right" alignment="CENTER" layoutX="1" layoutY="100" prefHeight="400.0" prefWidth="600.0" AnchorPane.leftAnchor="165.0" AnchorPane.rightAnchor="165.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="150.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>

                    </children>
                </GridPane>
            </children>
        </AnchorPane>
    </right>

</BorderPane>
