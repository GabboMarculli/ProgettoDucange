                        onAction="#onGoToHomeClick" GridPane.rowIndex="10" >
                </Button>
            </children>
        </GridPane>
        <ImageView fitHeight="300.0" fitWidth="300.0" layoutX="600.0" layoutY="250.0" preserveRatio="true">
            <image>
                <Image url="@img/pizza.png"/>
            </image>
        </ImageView>
