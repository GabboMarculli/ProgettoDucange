<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="656.0" prefWidth="841.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progettoducange.Controller.ViewRecipeController">
<children>
    <Pane prefHeight="200.0" style="-fx-background-color: #00bfff;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label layoutX="350.0" layoutY="70.0" text="Insert new recipe" textFill="WHITE">
                <font>
                    <Font size="50.0" />
                </font>
            </Label>
        </children>
    </Pane>
    <GridPane alignment="CENTER" layoutX="165.0" layoutY="214.0" prefHeight="374.0" prefWidth="511.0" AnchorPane.leftAnchor="165.0" AnchorPane.rightAnchor="165.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="32.0" minHeight="6.0" prefHeight="28.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="57.0" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="37.0" minHeight="0.0" prefHeight="17.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="48.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="58.0" minHeight="10.0" prefHeight="26.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="83.0" minHeight="10.0" prefHeight="78.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
        </rowConstraints>
        <children>
            <Label prefHeight="18.0" prefWidth="30.0" text="Title">
            </Label>
            <Label fx:id="RecipeTitle" GridPane.columnIndex="2">
            </Label>

            <Label prefHeight="18.0" prefWidth="50.0" text="Author" GridPane.rowIndex="1">
            </Label>
            <Label fx:id="RecipeAuthor" GridPane.columnIndex="2" GridPane.rowIndex="1">
            </Label>

            <Label prefHeight="18.0" prefWidth="90.0" text="Ingredients" GridPane.rowIndex="2">
            </Label>
            <VBox prefHeight="200.0" prefWidth="500.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <TextArea fx:id="RecipeIngredients" editable="false" prefHeight="100.0" prefWidth="300.0" promptText="Write the ingredients..." wrapText="true">
                </TextArea>
            </VBox>

            <Label prefHeight="18.0" prefWidth="90.0" text="Directions" GridPane.rowIndex="4">
            </Label>
            <VBox prefHeight="200.0" prefWidth="500.0" GridPane.columnIndex="2" GridPane.rowIndex="4">
                <TextArea fx:id="RecipeDirections" editable="false" prefHeight="130.0" prefWidth="300.0" promptText="Write the directions..." wrapText="true">
                </TextArea>
            </VBox>

            <VBox prefHeight="200.0" prefWidth="500.0" GridPane.columnIndex="2" GridPane.rowIndex="6">
                <children>
                    <TextArea fx:id="ReviewText" prefHeight="100.0" prefWidth="300.0" promptText="Write your opinion..." wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="6">
                    </TextArea>
                </children>
            </VBox>
            <Label fx:id="invalidSubmit" alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0" prefWidth="100.0" textAlignment="CENTER" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="8">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </Label>
        </children>
    </GridPane>

    <RadioButton layoutX="500.0" layoutY="575.0" mnemonicParsing="false" selected="true" text="1" textFill="DARKGRAY">
        <toggleGroup>
            <ToggleGroup fx:id="Rate" />
        </toggleGroup>
        <font>
            <Font size="14.0" />
        </font>
    </RadioButton>
    <RadioButton layoutX="540.0" layoutY="575.0" mnemonicParsing="false" text="2" textFill="DARKGRAY" toggleGroup="$Rate">
        <font>
            <Font size="14.0" />
        </font>
    </RadioButton>
    <RadioButton layoutX="580.0" layoutY="575.0" mnemonicParsing="false" text="3" textFill="DARKGRAY" toggleGroup="$Rate">
        <font>
            <Font size="14.0" />
        </font>
    </RadioButton>
    <RadioButton layoutX="620.0" layoutY="575.0" mnemonicParsing="false" text="4" textFill="DARKGRAY" toggleGroup="$Rate">
        <font>
            <Font size="14.0" />
        </font>
    </RadioButton>
    <RadioButton layoutX="660.0" layoutY="575.0" mnemonicParsing="false" text="5" textFill="DARKGRAY" toggleGroup="$Rate">
        <font>
            <Font size="14.0" />
        </font>
    </RadioButton>
    <Button alignment="CENTER" contentDisplay="CENTER" layoutX="720.0" layoutY="575.0" mnemonicParsing="false" onAction="#goToComments" text="View comments">
        <font>
            <Font size="15.0" />
        </font>
    </Button>

    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#submitComment"
            text="Submit comment" layoutX="300" layoutY="575">
        <font>
            <Font size="15.0" />
        </font>
    </Button>
    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goBack"
            text="Back" layoutX="200" layoutY="575">
        <font>
            <Font size="15.0" />
        </font>
    </Button>
</children>
</AnchorPane>
